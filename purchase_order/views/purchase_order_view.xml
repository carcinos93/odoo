            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="purchase_sequence_action">
            <field name="name">Correlativos</field>
            <field name="res_model">purchase.sequences</field>
            <field name="view_mode">tree,form</field>
        </record>






